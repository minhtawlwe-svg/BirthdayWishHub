@{
    ViewData["Title"] = "Happy Birthday Dad ❤️";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Birthday CSS -->
    <link href="/css/birthday.css" rel="stylesheet" />

    <style>
        /* VIDEO STYLING */
        .birthday-video {
            width: 100%;
            max-height: 400px;
            border-radius: 10px;
            object-fit: cover;
        }
    </style>
</head>
<body>

<div class="container my-5">

    <!-- 🎉 HERO SECTION -->
    <div class="hero text-center mb-5">
        <h1>🎂 Happy Birthday Dad 🎂</h1>
        <p class="fs-4 mt-3">
            Thank you for your love, sacrifices, and guidance ❤️
        </p>
    </div>

    <!-- 🎬 BIRTHDAY VIDEO SECTION -->
    <div class="section-card text-center mb-5 p-3 shadow-sm rounded">
        <h2 class="mb-3">🎥 A Special Birthday Video</h2>
        <p class="fs-5">A small gift made with endless love</p>
        <video
            src="/media/dad-birthday.mp4"
            controls
            autoplay
            muted
            loop
            class="birthday-video">
            Your browser does not support the video tag.
        </video>
    </div>

    <!-- 👨 FATHER BIOGRAPHY -->
    <div class="section-card mb-5 p-3 shadow-sm rounded">
        <h2 class="text-center mb-4">👨 About My Father</h2>
        <p class="fs-5">
            My father is the strongest and most caring person in my life.
            He has always been a source of inspiration, working tirelessly
            to give our family a better future.
        </p>
        <p class="fs-5">
            Through his actions, he taught us the importance of honesty,
            patience, responsibility, and kindness. His guidance shaped
            who we are today.
        </p>
        <p class="fs-5">
            On this special day, this website is a small way to say
            <b>Happy Birthday</b> and <b>Thank You</b> for everything he has done.
        </p>
        <p class="text-end fw-bold fs-5">
            — With love ❤️
        </p>
    </div>

    <!-- ✍️ WISH FORM -->
    <div class="section-card mb-5 p-3 shadow-sm rounded">
        <h3 class="mb-3">🎁 Leave a Birthday Wish</h3>
        <input
            id="sender"
            class="form-control mb-2"
            placeholder="Your Name" />
        <textarea
            id="text"
            class="form-control mb-2"
            placeholder="Write your birthday wish for Dad"
            rows="3"></textarea>
        <input
            type="file"
            id="media"
            class="form-control mb-3"
            accept="image/*,video/*" />
        <button
            class="btn btn-danger w-100"
            onclick="postMessage()">
            ❤️ Send Birthday Wish
        </button>
    </div>

    <!-- 💌 WISH LIST -->
    <div id="messageList"></div>

</div>

<!-- SCRIPTS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script src="/js/messages.js"></script>

<script>
    // Load initial messages and listen for real-time updates
    loadMessages();
</script>

</body>
</html>
